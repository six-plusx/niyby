<!--pages/zoneaddress/oneaddress.wxml-->
  <view class="cart-list1" wx:for="{{carts}}" wx:key="{{index}}" bindtap='navigatordetails' data-aid="{{item.Id}}">
    <!-- <text class="information">原所在地区：{{item.Area}}\n</text> -->
    <view class="ad_popError" wx:if="{{popErrorMsg}}">{{popErrorMsg}}</view> 

    <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker">

        <block wx:if="{{region[0]==''}}"> 
          当前选择：{{item.Area}}
        </block>
        <block wx:else> 
          当前选择：{{region[0]}}，{{region[1]}}，{{region[2]}}        
        </block>

      </view>
    </picker>

    <!--详细地址-->
    <view class="section">
      <input bindchange="bindsite" placeholder="详细地址" value='{{item.Loction}}' class='textbox'/>
      <input bindchange="bindperson" placeholder="联系人" value='{{item.Consignee}}' class='textbox'/>
      <input bindchange="bindphone" type="number" maxlength="11" placeholder="联系电话" value='{{item.Photo}}' class='textbox'/>
    </view>

    <view class="footer">
      <button class="footer-add" formType="delivery_is_default" bindtap="bindbtn">保存</button>
    </view>
  </view>